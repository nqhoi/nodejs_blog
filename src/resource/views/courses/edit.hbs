<div class="mt-4">
  <h3>Cập nhật khóa học</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">Tên khóa học</label>
      <input
        type="text"
        class="form-control"
        name="name"
        value="{{course.name}}"
        id="name"
        placeholder="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mô tả</label>
      <textarea
        class="form-control"
        name="description"
        id="description"
        placeholder="description"
      >{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <label for="videoId">Vdieo ID</label>
      <input
        type="text"
        class="form-control"
        name="videoId"
        value="{{course.videoId}}"
        id="videoId"
      />
    </div>
    <div class="form-group">
      <label for="level">Trình độ</label>
      <input
        type="text"
        class="form-control"
        name="level"
        value="{{course.level}}"
        id="level"
        placeholder="level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật Khóa Học</button>
  </form>
</div>